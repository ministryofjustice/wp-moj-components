<?xml version="1.0"?>
<ruleset>
  <!-- Scan all files in directory -->
  <file>.</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Ignore some files -->
  <exclude-pattern>tests/</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use PSR-2 -->
  <rule ref="PSR2"/>
</ruleset>
